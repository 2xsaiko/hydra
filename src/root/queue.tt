[% WRAPPER layout.tt title="Queue" %]
[% PROCESS common.tt %]

<h1>Hydra Queue</h1>

[% IF flashMsg %]
<p class="error">[% flashMsg %]</p>
[% END %]

[% IF queue.size == 0 %]

  <p>The queue is empty.</p>

[% ELSE %]

  [% INCLUDE renderBuildList builds=queue showSchedulingInfo=1 hideResultInfo=1 %]

[% END %]

[% END %]
